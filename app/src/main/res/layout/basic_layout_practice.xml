<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/scheduled_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/indigo"
            android:gravity="center_horizontal"
            android:paddingTop="16dp"
            android:text="@string/scheduled"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/indigo"
            android:gravity="center"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/watch"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="5dp"
                android:contentDescription="@string/this_is_a_vector_image"
                android:src="@drawable/ic_baseline_watch_later_24" />

            <TextView
                android:id="@+id/depart_time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/watch"
                android:background="@color/indigo"
                android:text="@string/flight_departing_in_5_days"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/indigo"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:text="@string/pnr_kv9_432776"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/passenger_first_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_name" />

                <TextView
                    android:id="@+id/passenger_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/john"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/passenger_last_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_name" />

                <TextView
                    android:id="@+id/passenger_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/doe"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/passenger_age_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/age" />

                <TextView
                    android:id="@+id/passenger_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_35"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">


                <TextView
                    android:id="@+id/passenger_gender_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender" />

                <TextView
                    android:id="@+id/passenger_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/m"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/departure_airport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/del"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/departure_airport_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/delhi"
                android:layout_below="@+id/departure_airport"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/arrival_airport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/nag"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/arrival_airport_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nagpur"
                android:layout_below="@id/arrival_airport"
                android:layout_alignParentEnd="true"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/flight_duration_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/arrival_airport"
                android:layout_toEndOf="@id/departure_airport"
                android:text="@string/flight_duration"
                android:textAlignment="center" />

            <View
                android:id="@+id/line_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/flight_duration_label"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_toStartOf="@+id/arrival_airport_full"
                android:layout_toEndOf="@id/departure_airport_full"
                android:background="@color/indigo" />

            <TextView
                android:id="@+id/flight_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_view"
                android:layout_toStartOf="@id/arrival_airport_full"
                android:layout_toEndOf="@id/departure_airport_full"
                android:text="@string/_7hr_45m_stopover"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/airport_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/flight_duration"
                android:layout_marginTop="24dp"
                >

                <ImageView
                    android:id="@+id/flight_take_off"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="5dp"
                    android:contentDescription="@string/this_is_a_vector_image"
                    android:src="@drawable/ic_baseline_flight_takeoff_24" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:id="@+id/departure_airport_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/indra_gandhi_international_airport_delhi"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@string/monday_19_december"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                </LinearLayout>

                <ImageButton
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/this_is_a_vector_image"
                    android:src="@drawable/ic_baseline_location_on_24"
                    tools:ignore="DuplicateSpeakableTextCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="24dp"
                android:layout_below="@+id/airport_container"
                android:id="@+id/dep_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true"
                >

                <TextView
                    android:id="@+id/passenger_departure_time_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/departure_time" />

                <TextView
                    android:id="@+id/passenger_departure_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_11_35_am"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="24dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/gate_co"
                android:layout_toEndOf="@id/dep_time"
                android:gravity="center"
                android:layout_below="@+id/airport_container"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/passenger_departure_terminal_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/terminal" />

                <TextView
                    android:id="@+id/passenger_departure_terminal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/t3"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="24dp"
                android:id="@+id/gate_co"
                android:layout_below="@+id/airport_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                >

                <TextView
                    android:id="@+id/passenger_departure_gate_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gate"
                    android:gravity="end"
                    android:textAlignment="gravity"/>

                <TextView
                    android:id="@+id/passenger_departure_gate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_10a"
                    android:gravity="end"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/gate_co"
                android:layout_marginTop="24dp"
                android:id="@+id/flight_number_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true"
                >

                <TextView
                    android:id="@+id/passenger_departure_flight_number_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flight_no" />

                <TextView
                    android:id="@+id/passenger_departure_flight_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ky12"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/gate_co"
                android:layout_marginTop="24dp"
                android:id="@+id/seat_number_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_toStartOf="@+id/airline_layout"
                android:layout_toEndOf="@id/flight_number_layout"
                >

                <TextView
                    android:id="@+id/passenger_seat_number_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seat" />

                <TextView
                    android:id="@+id/passenger_seat_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_11b"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/gate_co"
                android:layout_marginTop="24dp"
                android:id="@+id/airline_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                >

                <TextView
                    android:id="@+id/passenger_departure_Airline_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textAlignment="gravity"
                    android:text="@string/air" />

                <TextView
                    android:id="@+id/passenger_departure_airline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ai"
                    android:gravity="end"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/wifi"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/airline_layout"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/this_is_a_vector_image"
                android:src="@drawable/ic_baseline_wifi_24" />

            <ImageView
                android:id="@+id/food"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/airline_layout"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/this_is_a_vector_image"
                android:layout_toEndOf="@+id/wifi"
                android:src="@drawable/ic_baseline_local_cafe_24" />

            <ImageView
                android:id="@+id/electrical"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/airline_layout"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/this_is_a_vector_image"
                android:layout_toEndOf="@+id/food"
                android:src="@drawable/ic_baseline_electrical_services_24" />

            <ImageView
                android:id="@+id/suitcase"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/airline_layout"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/this_is_a_vector_image"
                android:layout_toEndOf="@+id/electrical"
                android:src="@drawable/ic_baseline_shopping_bag_24" />

            <TextView
                android:id="@+id/text_suitcase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_2_pcs_14kg"
                android:textSize="18sp"
                android:layout_below="@+id/airline_layout"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/suitcase"/>

            <TextView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/airline_layout"
                android:layout_marginTop="10dp"
                android:text="@string/more"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                android:layout_toEndOf="@+id/text_suitcase"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_fare"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_toStartOf="@+id/total_amount"
                android:layout_below="@id/more"/>

            <TextView
                android:id="@+id/total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inr_7811_00"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/more"/>


        </RelativeLayout>

        <TextView
            android:id="@+id/important_info_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/important_information"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

        <TextView
            android:id="@+id/text_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_text"
            android:textSize="15sp"
            android:justificationMode="inter_word"
            android:padding="16dp"
            tools:targetApi="o" />

    </LinearLayout>

</ScrollView>